<!DOCTYPE html>
<html>

<head>
  <title>FACT Dashboard</title>

  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- jQuery --->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
  <!-- Popper --->
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
    integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
    crossorigin="anonymous"></script>
  <!-- Bootstrap 4.5.2 --->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
    crossorigin="anonymous"></script>

  <!-- Google Chart -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.3/Chart.min.js"></script>

  <!-- Feather -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/feather-icons/4.9.0/feather.min.js"></script>

  <!-- Twitter Embeded API -->
  <script>
    window.twttr = (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0],
        t = window.twttr || {};
      if (d.getElementById(id)) return t;
      js = d.createElement(s);
      js.id = id;
      js.src = "https://platform.twitter.com/widgets.js";
      fjs.parentNode.insertBefore(js, fjs);

      t._e = [];
      t.ready = function (f) {
        t._e.push(f);
      };

      return t;
    }(document, "script", "twitter-wjs"));
  </script>

  <script type="text/javascript" src="/js/api.js"></script>

  <!-- Media --->
  <link rel='stylesheet' href='/css/style.css' />
  <link rel='stylesheet' href='/css/loader.css' />
</head>

<body>

  <nav class="navbar navbar-dark sticky-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand mr-0 px-3" href="/">FACT Dashboard</a>
    <button class="navbar-toggler position-absolute d-md-none collapsed" type="button" data-toggle="collapse"
      data-target="#sidebarMenu" aria-controls="sidebarMenu" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  </nav>

  <div class="container-fluid">
    <div class="row">
      <nav id="sidebarMenu" class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
        <div class="sidebar-sticky pt-3">
          <ul class="nav flex-column">
            <li class="nav-item">
              <a class="nav-link{{#if index}} active{{/if}}" href="/">
                <span data-feather="home"></span>
                Welcome
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link{{#if statistics}} active{{/if}}" href="/statistics">
                <span data-feather="pie-chart"></span>
                Statistics
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link{{#if graph}} active{{/if}}" href="/graph">
                <span data-feather="bar-chart-2"></span>
                Graph
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link{{#if about}} active{{/if}}" href="/about">
                <span data-feather="info"></span>
                About
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link{{#if contact}} active{{/if}}" href="/contact">
                <span data-feather="phone"></span>
                Contact
              </a>
            </li>
          </ul>
        </div>
      </nav>
      <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
        {{{body}}}

        <!-- Custom scripts -->
        <script type="text/javascript" src="/js/script.js"></script>

      </main>
    </div>
  </div>
</body>

</html>
